@model IEnumerable<Shop.Models.Category>
@{
    ViewBag.Title = "لیست تمام گروه های کالا";
}
<br />
<p>
    @Html.ActionLink("ایجاد گروه کالای جدید", "Create", null, new { @class = "btn btn-info" })
</p>
@if (!Model.Any())
{
    <div class="alert alert-warning">
        <span style="font-size: 16px">
            گروه کالایی وجود ندارد
        </span>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-9">

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                            @using (Html.BeginForm("Delete", "Category", new { id = item.Id }))
                            {
                                <input type="submit" value="حذف" class="btn btn-danger" />
                            }
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
}